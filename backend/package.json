{
  "name": "build-to-earn-backend",
  "version": "0.1.0",
  "private": true,
  "description": "DIY 크래프팅 월드 백엔드 API",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec 'ts-node src/index.ts'",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "migrate": "npm run migrate:latest",
    "migrate:latest": "node -r ts-node/register ./src/db/migrations/migrate.ts",
    "migrate:rollback": "node -r ts-node/register ./src/db/migrations/rollback.ts",
    "seed": "node -r ts-node/register ./src/db/seeds/seed.ts",
    "db:reset": "npm run migrate:rollback && npm run migrate:latest && npm run seed",
    "docker:build": "docker build -t build-to-earn-backend .",
    "docker:run": "docker run -p 4000:4000 build-to-earn-backend"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.2.1",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "bull": "^4.11.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "firebase-admin": "^11.10.1",
    "helmet": "^7.0.0",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^5.8.1",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "redis": "^4.6.7",
    "socket.io": "^4.7.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "web3": "^4.0.3",
    "winston": "^3.10.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/express-fileupload": "^1.4.1",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/node-cron": "^3.0.8",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "author": "DIY 크래프팅 월드 팀",
  "license": "MIT"
}
