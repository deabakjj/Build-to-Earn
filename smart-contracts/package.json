{
  "name": "build-to-earn-contracts",
  "version": "0.1.0",
  "private": true,
  "description": "DIY 크래프팅 월드 스마트 컨트랙트",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:testnet": "hardhat run scripts/deploy.js --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify": "hardhat verify",
    "verify:testnet": "hardhat verify --network testnet",
    "verify:mainnet": "hardhat verify --network mainnet",
    "flatten": "hardhat flatten",
    "console": "hardhat console",
    "node": "hardhat node",
    "size": "hardhat size-contracts",
    "gas-report": "REPORT_GAS=true hardhat test",
    "lint": "prettier --check . && solhint 'contracts/**/*.sol'",
    "lint:fix": "prettier --write . && solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write .",
    "prepare": "npm run compile",
    "generate-docs": "hardhat docgen",
    "audit": "slither . --solc-remaps '@openzeppelin/=node_modules/@openzeppelin/' --exclude-dependencies",
    "check-upgrades": "hardhat check",
    "deploy-upgrades": "hardhat deploy --reset",
    "fork": "hardhat node --fork https://mainnet.infura.io/v3/$INFURA_PROJECT_ID"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "ethers": "^6.7.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/hardhat": "^7.0.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.0",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^6.7.1",
    "hardhat": "^2.17.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.36",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-storage-layout": "^0.1.6",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "slither-analyzer": "^0.1.1",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "hardhat": "^2.17.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "author": "DIY 크래프팅 월드 팀",
  "license": "MIT"
}
