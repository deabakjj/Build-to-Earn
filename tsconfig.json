{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@frontend/*": ["./frontend/src/*"],
      "@backend/*": ["./backend/src/*"],
      "@game-server/*": ["./game-server/src/*"],
      "@contracts/*": ["./smart-contracts/contracts/*"],
      "@season/*": ["./season-management/src/*"],
      "@security/*": ["./security-system/src/*"],
      "@analytics/*": ["./analytics-system/src/*"],
      "@mobile/*": ["./mobile-system/src/*"],
      "@ai/*": ["./ai-system/src/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"]
    }
  },
  "include": [
    "frontend/src",
    "backend/src",
    "game-server/src",
    "smart-contracts",
    "season-management/src",
    "security-system/src",
    "analytics-system/src",
    "mobile-system/src",
    "ai-system/src",
    "types",
    "utils"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    { "path": "./frontend" },
    { "path": "./backend" },
    { "path": "./game-server" },
    { "path": "./smart-contracts" },
    { "path": "./season-management" },
    { "path": "./security-system" },
    { "path": "./analytics-system" },
    { "path": "./mobile-system" },
    { "path": "./ai-system" }
  ]
}
